html
  head
    title Follow Back List
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
  body
    div.row
      div.col-md-6.col-md-offset-3
        h1 People that don't follow you back
        ul.list-group
          each user in users
            li.list-group-item
              img(src=user.avatar, width="50")
              a(href="https://twitter.com/" + user.name)= user.name 
              span ( @
              span= user.screen_name
              span  )
